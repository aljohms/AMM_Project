@page "{id?}"
@model EmployeesModel
@section scripts {
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

        $(document).ready(function () {
            if ($('.field-validation-error').length || $('.validation-summary-errors').length) {
                $('#EmployeeModal').modal('show');
                var _self = $(this);
                var id = _self.data('employee').id;
                if (id > 0) {
                    document.querySelector(".modal-title").innerHTML = "Edit Details";
                } else {
                    document.querySelector(".modal-title").innerHTML = "New Employee";
                }
            }
        });

        $(document).on("click", ".Open-Employee-Dialog", function (e) {
            e.preventDefault();
            var _self = $(this);
            var id = _self.data('employee').id;

            $(".validation-summary-errors").empty();
            $('.field-validation-error').empty();


            if (id > 0) {
                var fname = _self.data('employee').fname;
                var lname = _self.data('employee').lname;
                var phone = _self.data('employee').phone;
                var email = _self.data('employee').email;

                $("#id").val(id);
                $("#fname").val(fname);
                $("#lname").val(lname);
                $("#phone").val(phone);
                $("#email").val(email);
                document.querySelector(".modal-title").innerHTML = "Edit Details";
            } else {
                $("#id").val(0);
                $("#fname").val('');
                $("#lname").val('');
                $("#phone").val('');
                $("#email").val('');
                document.querySelector(".modal-title").innerHTML = "New Employee";
            }

            $(_self.attr('href')).modal('show');
        });
    </script>
}
<nav aria-label="breadcrumb w-100">
    <ol class="breadcrumb row rounded-0 ">
        <li class="breadcrumb-item"><a asp-page="/Index">My Businesses</a></li>
        <li class="breadcrumb-item"><a asp-page="BusinessHome" asp-route-id="@Model.viewContent.BusnissId">@Model.viewContent.BusinessName</a></li>
        <li class="breadcrumb-item"><a asp-page="BranchHome" asp-route-id="@Model.viewContent.BranchId">@Model.viewContent.BranchName</a></li>
        <li class="breadcrumb-item active">Employees</li>
    </ol>
</nav>
<!--Add Employees-->
<div class="row justify-content-center">
    <div class="card rounded-top shadow w-100">
        <div class="card-header border-bottom-0 display-5 text-center">
            Employees
        </div>
        <div class="card-body">
            <a data-employee='{"id":"","fname":"","lname":"","phone":"","email":""}' title="Add this item" class="Open-Employee-Dialog btn text-success align-bottom" style="cursor:pointer;" href="#EmployeeModal"><span class="oi oi-plus" title="Add New Document" aria-hidden="true"></span></a>

            <table class="table  table-borderless">
                <thead class="bg-light font-weight-bold">
                    <tr class="border-bottom">
                        <td>First Name</td>
                        <td>Last Name</td>
                        <td>Cell phone</td>
                        <td>Email</td>
                        <td></td>
                        <td></td>

                    </tr>
                </thead>
                <tbody>

                    @if (Model.employees != null)
                    {
                        foreach (var employee in Model.employees)
                        {
                            <tr class="border-bottom">

                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.ContactNumber</td>
                                <td>@employee.Email</td>
                                <td>
                                    <a data-employee='{"id":"@employee.Id","fname":"@employee.FirstName","lname":"@employee.LastName","phone":"@employee.ContactNumber","email":"@employee.Email"}' title="Add this item" class="Open-Employee-Dialog btn btn-dark rounded-0 align-bottom w-100" style="cursor:pointer;" href="#EmployeeModal">Edit</a>
                                </td>
                                <td><a class="btn btn-danger text-light">Delete</a></td>
                                <td><a asp-page="EmployeeItems" asp-route-id="@employee.Id"><span class="oi oi-list"></span></a></td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!--Add Employee Item-->
<!-- Modal Form-->
<div class="modal fade" id="EmployeeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title display-5" id="myModalLabel"></div>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    @*<input type="text" name="bookId" id="id" value="" />*@
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Employee.Id" id="id" value="0" />
                    <div class="form-group">
                        <label asp-for="Employee.FirstName"></label>
                        <input asp-for="Employee.FirstName" id="fname" class="form-control" />
                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.LastName"></label>
                        <input asp-for="Employee.LastName" id="lname" class="form-control" />
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.ContactNumber"></label>
                        <input asp-for="Employee.ContactNumber" id="phone" class="form-control" />
                        <span asp-validation-for="Employee.ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.Email"></label>
                        <input asp-for="Employee.Email" id="email" class="form-control" />
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">

                    <div class="form-group pt-2  ">
                        <button type="submit" class="btn btn-primary rounded-10 shadow ">Save changes</button>
                        <button type="button" class="btn btn-danger  rounded-10 shadow" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
