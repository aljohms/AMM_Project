@page
@model LoginModel
@{
    Layout = "";
}
<!Doctype html>
<html>
<head>


    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/CSS/StyleLogin.css" rel="stylesheet" />
    <!--Open Iconic Css-->
    <link href="~/bootstrap/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-md-6 mx-auto">
                <div class="card shadow  rounded-0 p-4">
                    <h1 class="card-title text-center display-4">Login</h1>
                    <div class="card-body">
                        <form method="post" class="form-group">
                            <div class="form-group">
                                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <label asp-for="Input.Username"></label>
                                <input asp-for="Input.Username" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.Username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span class="text-danger" asp-validation-for="Input.Password"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary w-100 rounded-0 shadow float-right">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>