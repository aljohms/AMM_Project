@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
<div class="row justify-content-center">
    <div class="card col-8 shadow  rounded-0 p-4">
        <h1 class="card-title text-center display-4">Create New User</h1>
        <div class="card-body">
            <form method="post" class="form-group">
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.FirsrName"></label>
                    <input asp-for="Input.FirsrName" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.FirsrName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RePassword"></label>
                    <input asp-for="Input.RePassword" class="form-control " />
                    <span class="text-danger" asp-validation-for="Input.RePassword"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
